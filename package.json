{
  "name": "tronos",
  "version": "1.1.0",
  "description": "TronOS - The AI-Native Operating System. A simulated OS with virtual filesystem, package manager, and AI assistant that runs in your terminal or browser.",
  "type": "module",
  "license": "Apache-2.0",
  "author": "TronOS Contributors",
  "repository": {
    "type": "git",
    "url": "https://github.com/choas/tronos.git"
  },
  "homepage": "https://github.com/choas/tronos",
  "bugs": {
    "url": "https://github.com/choas/tronos/issues"
  },
  "keywords": [
    "tronos",
    "terminal",
    "os",
    "ai",
    "virtual-filesystem",
    "cli",
    "shell",
    "package-manager"
  ],
  "bin": {
    "tronos": "./bin/tronos.ts"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "cli": "bun run bin/tronos.ts",
    "build:cli": "bun build bin/tronos.ts --target node --minify --outfile dist/tronos.js --define 'import.meta.env={}' --define 'process.env.NODE_ENV=\"production\"'",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "check": "tsc --noEmit"
  },
  "dependencies": {
    "@types/path-browserify": "^1.0.3",
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/addon-web-links": "^0.12.0",
    "@xterm/xterm": "^6.0.0",
    "idb": "^8.0.3",
    "js-yaml": "^4.1.1",
    "path-browserify": "^1.0.1",
    "solid-js": "^1.9.10"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.10.1",
    "@vitest/ui": "^4.0.18",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "vite-plugin-solid": "^2.11.10",
    "vitest": "^4.0.18",
    "@types/bun": "latest"
  },
  "module": "src/index.tsx"
}
